<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.screens.OnBoardingFirstScreen">


    <ImageView
        android:id="@+id/img_onboarding"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="34dp"
        android:src="@drawable/img_onboarding1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_onboarding_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="170dp"
        android:fontFamily="@font/font_family"
        android:gravity="center"
        android:text="@string/onboarding1_title"
        android:textColor="@color/onboarding_title_color"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_onboarding_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/font_family"
        android:gravity="center"
        android:text="@string/onboarding_desc"
        android:textColor="@color/onboarding_desc_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_onboarding_title"
        app:layout_constraintStart_toStartOf="@+id/txt_onboarding_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_onboarding_title" />

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/fab_background"
        android:clickable="true"
        android:elevation="10dp"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintEnd_toEndOf="@+id/txt_onboarding_desc"
        app:layout_constraintStart_toStartOf="@+id/txt_onboarding_desc"
        app:layout_constraintTop_toBottomOf="@+id/txt_onboarding_desc" />


</androidx.constraintlayout.widget.ConstraintLayout>